@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = "Reports Page";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/reports.css" asp-append-version="true">
    <title>@localizer["ReportsPageMsg"]</title>
</head>
<body>
<div class="header text-center">
    <h1>@localizer["WelcomeToYourReportsMsg"]</h1>
    <p>@localizer["ChooseReportsMsg"]</p>
</div>

<div class="report-buttons">
    <div class="report-item">
        <button id="accumulationReportBtn">@localizer["AccumulationReportMsg"]</button>
        <p class="report-description">@localizer["AccumulationReportDesc"]</p>
    </div>

    <div class="report-item">
        <button onclick="getReport('Education')">@localizer["EducationReportMsg"]</button>
        <p class="report-description">@localizer["EducationReportDesc"]</p>
    </div>

    <div class="report-item">
        <button onclick="getReport('Development')">@localizer["DevelopmentReportMsg"]</button>
        <p class="report-description">@localizer["DevelopmentReportDesc"]</p>
    </div>

    <div class="report-item">
        <button onclick="getReport('Business')">@localizer["BusinessReportMsg"]</button>
        <p class="report-description">@localizer["BusinessReportDesc"]</p>
    </div>
</div>
<div id="reportContainer" data-userid="@ViewBag.UserId"></div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("accumulationReportBtn").addEventListener("click", function () {
            var userId = document.getElementById("reportContainer").getAttribute("data-userid");

            if (!userId) {
                alert("User not found!");
                return;
            }

            window.location.href = "/Reports/GetAccumulationReportByUserId?userId=" + userId;
        });
    });
</script>
</body>
</html>
