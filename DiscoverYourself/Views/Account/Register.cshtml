@model dynamic
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true">
</head>
<body>
<div class="register-container">
    <h1>Register</h1>
    <form asp-action="Register" method="post">
        <input type="text" name="username" placeholder="Username" class="neon-input" required />
        <input type="email" name="email" placeholder="Email" class="neon-input" required />
        <input type="password" name="password" placeholder="Password" class="neon-input" required />
        <button type="submit" class="neon-button">Register</button>
    </form>
</div>
</body>
</html>