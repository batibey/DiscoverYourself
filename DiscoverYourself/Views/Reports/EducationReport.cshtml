@model List<DiscoverYourself.Models.Entities.EducationGoal>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@{ Layout = null; }

<head>
    <title>@localizer["EducationReportMsg"]</title>
    <link rel="stylesheet" href="~/css/education_report.css" asp-append-version="true">
</head>
<h2>@localizer["EducationReportMsg"]</h2>

<table class="table">
    <thead>
    <tr>
        <th>@localizer["StartDateMsg"]</th>
        <th>@localizer["EndDateMsg"]</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var education in Model)
    {
        <tr>
            <td>@education.StartDate.ToShortDateString()</td>
            <td>@education.EndDate.ToShortDateString()</td>
        </tr>
    }
    </tbody>
</table>